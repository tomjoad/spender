<div class="row">
  <div class="col-md-6 col-md-offset-3 welcome-txt">
    <h1>Spender</h1>
    <p>Simple app that will change your life.</p>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4 landing-btns">
    <% if user_signed_in? %>
      <%= link_to "My Expenses", expenses_path, class: 'btn btn-success btn-lg' %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'btn btn-default btn-lg' %>
    <% else %>
      <%= link_to "Sign in", new_user_session_path, class: 'btn btn-success btn-lg' %>
      <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-success btn-lg' %>
    <% end %>
  </div>
</div>
